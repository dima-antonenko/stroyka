<% if  @minicart %>
<style type="text/css">
  .mini_image{
    height: 60px;
    width: 60px;
  }
</style>
<ul class="f_right horizontal_list d_sm_inline_b f_sm_none clearfix t_align_l site_settings">
                    <li class="m_left_5 relative container3d" id="shopping_button">
                      <a role="button" href="#" class="button_type_3 color_light bg_scheme_color d_block r_corners tr_delay_hover box_s_none">
                        <span class="d_inline_middle shop_icon">
                          <i class="fa fa-shopping-cart"></i>
                          <span class="count tr_delay_hover type_2 circle t_align_c"><%= @minicart.line_items.count %></span>
                        </span>
                        <b><%= @minicart.total_price %> р.</b>
                      </a>
                      <div class="shopping_cart top_arrow tr_all_hover r_corners">
                        <div class="f_size_medium sc_header">Содержимое корзины</div>
                        <ul class="products_list">
                          <% @minicart.line_items.each do |item| %>
                          <li>
                            <div class="clearfix">
                              <!--product image-->
                              <img class="f_left m_right_10 mini_image" src="<%= item.product.image %>" alt="">
                              <!--product description-->
                              <div class="f_left product_description">
                                <a href="#" class="color_dark m_bottom_5 d_block"><%= item.product.name[0..20].gsub(/\s\w+\s*$/,'...') %></a>
                                <span class="f_size_medium"><%= item.quantity %> x <b class="color_dark"><%= item.product.price %></b></span>
                              </div>
                              <!--product price-->
                              <div class="f_left f_size_medium">
                                <div class="clearfix">
                                  
                                </div>
                               
                              </div>
                            </div>
                          </li>
                          <% end %>
                        </ul>
                        <!--total price-->
                        <ul class="total_price bg_light_color_1 t_align_r color_dark">
                          <li class="m_bottom_10">Всего: <span class="f_size_large sc_price t_align_l d_inline_b m_left_15"><%= @minicart.total_price %></span></li>
                        </ul>
                        <div class="sc_footer t_align_c">
                          <a href="<%= @cart_url %>" role="button" class="button_type_4 d_inline_middle bg_light_color_2 r_corners color_dark t_align_c tr_all_hover m_mxs_bottom_5">В корзину</a>
                          <a href="<%= new_order_path %>" role="button" class="button_type_4 bg_scheme_color d_inline_middle r_corners tr_all_hover color_light">К оплате</a>
                        </div>
                      </div>
                    </li>
</ul>

<% end %>