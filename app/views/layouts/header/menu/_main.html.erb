<section class="h_bot_part">
        <div class="menu_wrap">
            <div class="container">
              <div class="clearfix row">
                <div class="col-lg-2 t_md_align_c m_md_bottom_15">
                  <a href="/" class="logo d_md_inline_b">
                    <img src="/images/logo.png" alt="">
                  </a>
                </div>
                <div class="col-lg-10 clearfix t_sm_align_c">
                  <div class="clearfix t_sm_align_l f_left f_sm_none relative s_form_wrap m_sm_bottom_15 p_xs_hr_0 m_xs_bottom_5">
                    <!--main menu-->
                    <nav role="navigation" class="f_left f_xs_none d_xs_none m_right_35 m_md_right_30 m_sm_right_0">  
                      <ul class="horizontal_list main_menu type_2 clearfix">
                      <% @main_menu.menu_items.order(:position).each do |menu_item| %>
                         <% if menu_item.menu_item_id == 1  %>
                          <li class="relative f_xs_none m_xs_bottom_5 m_left_10 m_xs_left_0"><a href="<%= menu_item.link %>" class="tr_delay_hover color_dark tt_uppercase r_corners"><b><%= menu_item.title %></b></a></li>
                          <% end %>
                          <% end %>
                          </li>

                        
                      </ul>
                    </nav>
                  

                  </div>
                  
                  <%= render '/layouts/header/menu/cart' %>

                </div>
              </div>
            </div>
            <hr class="divider_type_6">
          </div>
        </section>