			<!-- END PAGE HEADER-->
			<!-- BEGIN PAGE CONTENT-->
			<div class="row">
				<div class="col-md-12">
					<!-- BEGIN EXAMPLE TABLE PORTLET-->
					<div class="portlet box grey-cascade">
						<div class="portlet-title">
							<div class="caption">
								<%= @menu.title %>
							</div>
						</div>
						<div class="portlet-body">
							<div class="table-toolbar">
								<div class="row">
									<div class="col-md-6">
										<div class="btn-group">
												<a href="/administrator/menu_items/new" id="sample_editable_1_new" class="btn green">Новый пункт меню</a>
										</div>
									</div>
								</div>
							</div>
							<table class="table table-striped table-hover table-bordered" id="sample_editable_1">
							<thead>
							<tr>
								<th>
									 Название
								</th>
								<th>
									 Родитель
								</th>
								<th>
									 Позиция
								</th>
								<th>
									 
								</th>
								
							</tr>
							</thead>
							<tbody>
							
						<% @menu.menu_items.each do |item| %>
							<tr>
								<td>
									 <%= link_to item.title, edit_administrator_menu_item_path(item) %> <!-- -->

								</td>
								<td>
									 <% if item.menu_item_id != 1 %>
									 	<%= item.menu_item.title %>
									 <% else  %>
									 	Корневой пункт меню
									 <% end %>

									 

								</td>
								<td>
									<%= item.position %>
								</td>
								<td>
									<%= link_to 'Удалить', administrator_menu_item_path(item), method: :delete, data: { confirm: 'Удалить пункт ?' } %>
								</td>
							</tr>

						<% end %>
							</tbody>
							</table>
						</div>
					</div>
