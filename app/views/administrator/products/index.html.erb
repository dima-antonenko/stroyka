	<div class="page-content-wrapper">
		<div class="page-content">
			<!-- END PAGE BREADCRUMB -->
			<!-- END PAGE HEADER-->
			<!-- BEGIN PAGE CONTENT-->
			<div class="row">
				<div class="col-md-12">
					<!-- BEGIN EXAMPLE TABLE PORTLET-->
					<div class="portlet box grey-cascade">
						<div class="portlet-title">
							<div class="caption">
								Все товары
							</div>
						</div>
						<div class="portlet-body">
							<div class="table-toolbar">
								<div class="row">
									<div class="col-md-6">
										<div class="btn-group">
											<a href="/administrator/products/new" id="sample_editable_1_new" class="btn green">Добавить новый</a>
											
										</div>
									</div>
									<div class="col-md-6">
									</div>
								</div>
							</div>
							<table class="table table-striped table-bordered table-hover" id="sample_1">
							<thead>
							<tr>
								<th>
									 Название
								</th>
								<th>
									 Категория
								</th>
								<th>
									 Цена
								</th>
								<th>
									 Артикул
								</th>
								<th>
									 
								</th>
							</tr>
							</thead>
							<tbody>
							<% @products.each do |product| %>
								<tr class="odd gradeX">
									<td>
										 <%= link_to product.name, edit_administrator_product_path(product.id) %>
									</td>
									<td>
										
											<%# product.product_category.name %>
									</td>
									<td>
										 <%= product.price %>
									</td>
									<td class="center">
										 <%= product.sku %>
									</td>
									<td>
										 <%= link_to 'Удалить', administrator_product_path(product), method: :delete, data: { confirm: 'Удалить товар ?' } %>
									</td>
								</tr>
							<% end %>
							</tbody>
							</table>

						</div>
					</div>
					<!-- END EXAMPLE TABLE PORTLET-->
					<%= will_paginate @products %>
				</div>
			</div>
			
			<!-- END PAGE CONTENT-->
		</div>
	</div>
