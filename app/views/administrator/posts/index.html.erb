
	<div class="page-content-wrapper">
		<div class="page-content">
			<!-- END PAGE BREADCRUMB -->
			<!-- END PAGE HEADER-->
			<!-- BEGIN PAGE CONTENT-->
			<div class="row">
				<div class="col-md-12">
					<!-- BEGIN EXAMPLE TABLE PORTLET-->
					<div class="portlet box grey-cascade" >
						<div class="portlet-title">
							<div class="caption">
								Все записи
							</div>
						</div>
						<div class="portlet-body">
							<div class="table-toolbar">
								<div class="row">
									<div class="col-md-6">
										<div class="btn-group">
											<a href="/administrator/posts/new" id="sample_editable_1_new" class="btn green">Добавить новую</a>
										</div>
									</div>
								</div>
							</div>
							<table class="table table-striped table-hover table-bordered" id="sample_editable_1">
							<thead>
							<tr>
								<th>
									 Название
								</th>
								<th>
									 Лид
								</th>
								<th>
									 Дата создания
								</th>
								<th>
									 
								</th>
							</tr>
							</thead>
							<tbody>
							
						<% @posts.each do |post| %>
							<tr>
								<td>
									 <%= link_to post.title, edit_administrator_post_path(post) %> <!-- -->
								</td>
								<td>
									 <%= post.lead.to_s[0..100] %>  ...  <!-- -->
								</td>
								<td>
									<%= post.created_at.to_s[2...-4] %>

								</td>
								<td>
									<%= link_to 'Удалить', administrator_post_path(post), method: :delete, data: { confirm: 'Удалить запись ?' } %>
								</td>
							</tr>

						<% end %>
							</tbody>
							</table>
						</div>
					</div>
					<!-- END EXAMPLE TABLE PORTLET-->
				</div>
			</div>
			<!-- END PAGE CONTENT -->
		</div>
	</div>
