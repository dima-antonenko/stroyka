	<div class="page-content-wrapper">
		<div class="page-content">
			<!-- END PAGE BREADCRUMB -->
			<!-- END PAGE HEADER-->
			<!-- BEGIN PAGE CONTENT-->
			<div class="row">
				<div class="col-md-12">
					<!-- BEGIN EXAMPLE TABLE PORTLET-->
					<div class="portlet box grey-cascade">
						<div class="portlet-title">
							<div class="caption">
								Заказы
							</div>
						</div>
						<div class="portlet-body">
							<table class="table table-striped table-bordered table-hover" id="sample_1">
							<thead>
							<tr>
								<th class="table-checkbox">
									Номер заказа
								</th>
								<th>
									 Получатель
								</th>
								<th>
									 Сумма
								</th>
								<th>
									 Телефон
								</th>
								<th>
									 Дата
								</th>
								<th>
									 
								</th>
							</tr>
							</thead>
							<tbody>
							<% @orders.each do |order| %>
								<tr class="odd gradeX">
									<td>
										<%= order.id %>
									</td>
									<td>
										 <%= link_to order.name, edit_administrator_order_path(order.id) %>
									</td>
									<td>
										<%= order.total_price %> руб.
									</td>
									<td class="center">
										 +123456
									</td>	
									<td>
										 <%= order.created_at.to_s[2...-4] %>
									</td>
									<td>
										<%= link_to 'Удалить', administrator_order_path(order), method: :delete, data: { confirm: 'Удалить товар ?' } %>
									</td>
								</tr>
							<% end %>
							</tbody>
							</table>
						</div>
					</div>
					<!-- END EXAMPLE TABLE PORTLET-->
				</div>
			</div>
			
			<!-- END PAGE CONTENT-->
